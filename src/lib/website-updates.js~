import clientPromise from "@/lib/mongodb";
import { ObjectId } from "mongodb";

const websiteUpdatesCollectionName = 'websiteUpdates';

export async function getAllWebsiteUpdates() {
    try {
        const client = await clientPromise;
        const db = client.db();
        const websiteUpdates = db.collection(websiteUpdatesCollectionName);
        return await websiteUpdates.find({}).sort({ date: -1 }).toArray(); // Sort by date descending
    } catch (error) {
        console.error("Error fetching all website updates:", error);
        throw error;
    }
}

export async function getWebsiteUpdateById(id) {
    try {
        const client = await clientPromise;
        const db = client.db();
        const websiteUpdates = db.collection(websiteUpdatesCollectionName);
        return await websiteUpdates.findOne({ _id: new ObjectId(id) });
    } catch (error) {
        console.error(`Error fetching website update with ID ${id}:`, error);
        throw error;
    }
}

export async function addWebsiteUpdate(updateData) {
    try {
        const client = await clientPromise;
        const db = client.db();
        const websiteUpdates = db.collection(websiteUpdatesCollectionName);
        const now = new Date();
        const result = await websiteUpdates.insertOne({
            ...updateData,
            createdAt: now,
            updatedAt: now,
        });
        return { ...updateData, _id: result.insertedId };
    } catch (error) {
        console.error("Error adding website update:", error);
        throw error;
    }
}

export async function updateWebsiteUpdate(id, updateData) {
    try {
        const client = await clientPromise;
        const db = client.db();
        const websiteUpdates = db.collection(websiteUpdatesCollectionName);
        const now = new Date();
        const result = await websiteUpdates.updateOne(
            { _id: new ObjectId(id) },
            { $set: { ...updateData, updatedAt: now } }
        );
        if (result.matchedCount === 0) {
            return null; // Not found
        }
        return await getWebsiteUpdateById(id); // Return the updated document
    } catch (error) {
        console.error(`Error updating website update with ID ${id}:`, error);
        throw error;
    }
}

export async function deleteWebsiteUpdate(id) {
    try {
        const client = await clientPromise;
        const db = client.db();
        const websiteUpdates = db.collection(websiteUpdatesCollectionName);
        const result = await websiteUpdates.deleteOne({ _id: new ObjectId(id) });
        return result.deletedCount > 0;
    } catch (error) {
        console.error(`Error deleting website update with ID ${id}:`, error);
        throw error;
    }
}