"use client";

import { useState } from "react";
import InputBox from "@/components/Input";
import { useUsers } from "@/hooks/useUsers";
import Pagination from "@/components/dashboard/Pagination.js";
import Link from "next/link";

export default function UserManagementContent() {
    const [searchTerm, setSearchTerm] = useState("");
    const [filterDate, setFilterDate] = useState("");
    const [customStartDate, setCustomStartDate] = useState("");
    const [customEndDate, setCustomEndDate] = useState("");
    const [currentPage, setCurrentPage] = useState(1);
    const [itemsPerPage, setItemsPerPage] = useState(10);
    
    // Fetch all users (for total count)
    const {
        users: allUsers,
        loading: allUsersLoading,
        error: allUsersError,
    } = useUsers({});
    
    // Fetch users based on filter & pagination
    const {
        filteredUsers: usersOnPage,
        loading,
        error,
    } = useUsers({
        searchTerm,
        filterDate,
        customStartDate,
        customEndDate,
        page: currentPage,
        limit: itemsPerPage,
    });
    
    const totalUsersCount = allUsers ? allUsers.length : 0;
    const totalPages = Math.ceil(totalUsersCount / itemsPerPage);
    
    const handlePageChange = (newPage) => {
        setCurrentPage(newPage);
    };
    
    const handleItemsPerPageChange = (event) => {
        setItemsPerPage(parseInt(event.target.value, 10));
        setCurrentPage(1);
    };
    
    if (loading || allUsersLoading) {
        return (
            <div className="mt-6 p-6 bg-background rounded-lg shadow-md flex-1 flex items-center justify-center">
                <p className="text-lg text-foreground">Loading users...</p>
            </div>
        );
    }
    
    if (error || allUsersError) {
        return (
            <div className="mt-6 p-6 bg-background rounded-lg shadow-md flex-1 flex items-center justify-center">
                <p className="text-lg text-danger">
                    Error: {error || allUsersError}
                </p>
            </div>
        );
    }
    
    return (
        <div className=" h-full px-4 pb-10 bg-background rounded-lg flex-1 flex flex-col">
            <h2 className="text-2xl font-semibold text-foreground mb-4">
                User Management
            </h2>
            <p className="text-foreground mb-6">Manage users here.</p>
            
            <div className="flex flex-col sm:flex-row justify-between items-center mb-4 gap-4">
                <div className="flex flex-wrap gap-2 w-full sm:w-auto">
                    <InputBox
                        type="text"
                        placeholder="Search by name or email"
                        value={searchTerm}
                        onChange={(e) => setSearchTerm(e.target.value)}
                    />
                    <select
                        value={filterDate}
                        onChange={(e) => setFilterDate(e.target.value)}
                        className="border border-border p-2 rounded-md text-foreground bg-background"
                    >
                        <option value="">All Created Dates</option>
                        <option value="today">Today Created</option>
                        <option value="yesterday">Yesterday Created</option>
                        <option value="custom">Custom Created Range</option>
                    </select>
                    
                    {filterDate === "custom" && (
                        <>
                            <div className="relative">
                                <InputBox
                                    type="date"
                                    value={customStartDate}
                                    onChange={(e) => setCustomStartDate(e.target.value)}
                                    className="border border-border p-2 rounded-md text-foreground bg-background pl-8"
                                />
                            </div>
                            <div className="relative">
                                <InputBox
                                    type="date"
                                    value={customEndDate}
                                    onChange={(e) => setCustomEndDate(e.target.value)}
                                    className="border border-border p-2 rounded-md text-foreground bg-background pl-8"
                                />
                            </div>
                        </>
                    )}
                </div>
                <div className="flex items-center">
                    <label htmlFor="itemsPerPage" className="mr-2 text-foreground">
                        Items per page:
                    </label>
                    <select
                        id="itemsPerPage"
                        value={itemsPerPage}
                        onChange={handleItemsPerPageChange}
                        className="border border-border p-2 rounded-md text-foreground bg-background"
                    >
                        <option value={5}>5</option>
                        <option value={10}>10</option>
                        <option value={20}>20</option>
                        <option value={50}>50</option>
                    </select>
                </div>
            </div>
            {/* Desktop Table Layout */}
            <div className="hidden sm:flex flex-col overflow-x-auto">
                {/* Header Row */}
                <div className="grid grid-cols-7 gap-4 p-2 text-foreground sticky top-0 bg-background z-10">
                    <span>Name</span>
                    <span>Email</span>
                    <span>Username</span>
                    <span>Photo URL</span>
                    <span>Role</span>
                    <span>Created At</span>
                    <span>Last Logged In</span>
                </div>
                {/* Data Rows */}
                {usersOnPage.map((user) => (
                    <Link
                        key={user._id ? user._id : user.email}
                        href={`/${user.username}`}
                        className="grid grid-cols-7 gap-4 p-2 border-b border-border cursor-pointer text-foreground font-mono hover:bg-secondary hover:text-background hover:rounded-md transition-colors"
                    >
                        <span>{user.displayName || "N/A"}</span>
                        <span className="truncate">{user.email || "N/A"}</span>
                        <span>{user.username || "N/A"}</span>
                        <span>
                            {user.photoURL ? (
                                <a
                                    href={user.photoURL}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    className="text-blue-500 hover:underline"
                                >
                                    View
                                </a>
                            ) : (
                                "N/A"
                            )}
                        </span>
                        <span>{user.role || "N/A"}</span>
                        <span>
                            {user.createdAt
                                ? new Date(user.createdAt).toLocaleDateString()
                                : "N/A"}
                        </span>
                        <span>
                            {user.lastLoggedInAt
                                ? new Intl.DateTimeFormat(undefined, {
                                    dateStyle: "short",
                                    timeStyle: "short",
                                }).format(new Date(user.lastLoggedInAt))
                                : "N/A"}
                        </span>
                    </Link>
                ))}
            </div>
            
            {/* Mobile Card Layout */}
            <div className="sm:hidden flex flex-col pb-6 gap-4">
                {usersOnPage.map((user) => (
                    <Link
                        key={user._id ? user._id : user.email}
                        href={`/${user.username}`}
                        className="p-4 bg-background border border-border rounded-md shadow hover:shadow-lg transition-shadow"
                    >
                        <div className="flex flex-col gap-2 text-foreground">
                            <div>
                                <span className="font-semibold">Name: </span>
                                {user.displayName || "N/A"}
                            </div>
                            <div className="truncate">
                                <span className="font-semibold">Email: </span>
                                {user.email || "N/A"}
                            </div>
                            <div>
                                <span className="font-semibold">Created At: </span>
                                {user.createdAt
                                    ? new Date(user.createdAt).toLocaleDateString()
                                    : "N/A"}
                            </div>
                            <div>
                                <span className="font-semibold">Last Logged In: </span>
                                {user.lastLoggedInAt
                                    ? new Intl.DateTimeFormat(undefined, {
                                        dateStyle: "short",
                                        timeStyle: "short",
                                    }).format(new Date(user.lastLoggedInAt))
                                    : "N/A"}
                            </div>
                        </div>
                    </Link>
                ))}
            </div>
            
            {totalPages > 1 && (
                <Pagination
                    currentPage={currentPage}
                    totalPages={totalPages}
                    onPageChange={handlePageChange}
                />
            )}
        </div>
    );
}
